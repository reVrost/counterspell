# GitHub OAuth Configuration
# Get these from: https://github.com/settings/developers

# Your GitHub OAuth App Client ID
GITHUB_CLIENT_ID=your_github_client_id_here

# Your GitHub OAuth App Client Secret
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# The callback URL registered with GitHub OAuth App
GITHUB_REDIRECT_URI=http://localhost:8710/github/callback

# =============================================================================
# Multi-Tenant Configuration
# =============================================================================

# Enable multi-tenant mode (default: false for backward compatibility)
MULTI_TENANT=false

# Supabase configuration (required when MULTI_TENANT=true)
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_JWT_SECRET=your-jwt-secret

# =============================================================================
# Worker Pool Configuration
# =============================================================================

# Number of concurrent workers in the global pool (default: 20)
WORKER_POOL_SIZE=20

# Maximum concurrent tasks per user (default: 5)
MAX_TASKS_PER_USER=5

# Time after which inactive UserManager is cleaned up (default: 2h)
USER_MANAGER_TTL=2h

# =============================================================================
# Sandbox Configuration
# =============================================================================

# Timeout for sandboxed command execution in seconds (default: 600 = 10 minutes)
SANDBOX_TIMEOUT=10m

# Maximum output size in bytes (default: 1048576 = 1MB)
SANDBOX_OUTPUT_LIMIT=1048576

# Commands allowed to run without sandbox for backend_native
# (comma-separated, default: git,ls,cat,head,tail,grep,find,wc,sort,uniq)
NATIVE_ALLOWLIST=git,ls,cat,head,tail,grep,find,wc,sort,uniq

# =============================================================================
# Data Directory
# =============================================================================

# Base directory for all data (databases, repos, workspaces)
DATA_DIR=./data
